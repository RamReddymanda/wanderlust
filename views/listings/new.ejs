<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <br><br>
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required>
            <div class="valid-feedback">
                Title Looks good!
              </div>
            <div class="invalid-feedback">
                enter valid Title.
              </div>
        </div>
       <div class="mb-3">
            <lable for="description">Descrption</lable><br>
            <textarea name="listing[description]"  id="" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Type description.
              </div>
       </div>
       <!-- <div class="mb-3">
            <label for="image">Image Link</label>
            <input type="text" name="listing[image][url]" placeholder="enter image url/link" class="form-control">
        </div> -->
        <div class="mb-3">
            <label for="image">Image Link</label>
            <input type="file" name="listing[image]"  class="form-control">
        </div>
       <div class="row">
        <div class="mb-3 col-md-4" >
            <label for="price">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control" required> 
            <div class="invalid-feedback">
                enter valid price.
              </div>
        </div> 
        <div class="mb-3 col-md-8">
            <label for="country">Country</label>
            <input type="text" name="listing[country]" placeholder="india" class="form-control" required>
            <div class="invalid-feedback">
                enter valid county name.
              </div>
        </div>
       </div>
         
        <div class="mb-3">
            <label for="location">Location</label>
            <input type="text" name="listing[location]" placeholder="Hyderbad,Telangana" class="form-control" required>
            <div class="invalid-feedback">
                enter location.
              </div>
        </div>
      
        
        <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
</div>
</div>