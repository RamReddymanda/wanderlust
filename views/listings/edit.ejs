<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
    <br><br>
    <h3>Edit Listing</h3>
    <form method="post" novalidate class="needs-validation" enctype="multipart/form-data" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" name="listing[title]" value="<%=listing.title%>"  placeholder="Add a catchy title" class="form-control" required>
            <div class="valid-feedback">
                Title Looks good!
              </div>
            <div class="invalid-feedback">
                enter valid Title.
              </div>
        </div>
        <div class="mb-3">
            <lable for="description">Descrption</lable><br>
            <textarea name="listing[description]" value="<%=listing.description%>" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">
                Type description.
              </div>
        </div>
        <div class="mb-3">
            Orginal Image
            <img src="<%= orginalImage %>" height="200px"  alt="">
        </div>
        <div class="mb-3">
            <label for="image">Upload New Image</label>
            <input type="file" name="listing[image]"  class="form-control" >
        </div>
  
        <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price">Price</label>
                <input type="number" name="listing[price]" value="<%=listing.price%>" placeholder="1200" class="form-control" required> 
                <div class="invalid-feedback">
                    enter valid price.
                  </div>
            </div> 
            <div class="mb-3 col-md-8">
                <label for="country">Country</label>
                <input type="text" name="listing[country]" value="<%=listing.country%>" placeholder="india" class="form-control" required>
                <div class="invalid-feedback">
                    enter valid county name.
                  </div>
            </div>
           </div>
        <div class="mb-3">
            <label for="location">Location</label>
            <input type="text" name="listing[location]" value="<%=listing.location%>" placeholder="location" class="form-control" required>
            <div class="invalid-feedback">
                enter location.
              </div>
        </div>
        <button class="btn btn-dark mb-3">Update</button>
    </form>
</div>
</div>